<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.firebasetest.FirebaseUserFirestoreActivity">

    <EditText
        android:id="@+id/etFirestoreMsgOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MSG1" />

    <EditText
        android:id="@+id/etFirestoreMsgTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MSG2" />

    <EditText
        android:id="@+id/etFirestoreDocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Document Name" />

    <Button
        android:id="@+id/btnFirestoreSaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

    <TextView
        android:id="@+id/tvFirebaseDocDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/etFolderNameToDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Document Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDeleteDocFirestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />

        <Button
            android:id="@+id/btnGetData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetData" />

        <Button
            android:id="@+id/btnGetDataCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetDataCache" />

    </LinearLayout>

</LinearLayout>
